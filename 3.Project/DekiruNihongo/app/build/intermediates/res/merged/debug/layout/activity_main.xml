<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_screen"
    android:orientation="vertical"
    tools:context="hmdq.js.codeproject.dekirunihongo.MainActivity"
    android:paddingBottom="30dp">

    <ImageButton
        android:id="@+id/iBtn1"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:background="@drawable/image_book_1"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="60dp" />

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:id="@+id/iBtn2"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:background="@drawable/image_book_2"
        android:layout_marginBottom="30dp" />

    <ImageButton
        android:id="@+id/iBtn3"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:background="@drawable/image_book_3" />
</LinearLayout>
